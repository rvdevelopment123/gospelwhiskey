<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    .icon_collection{
    background: var(--header-background) !important;
        color : white;
        font-size:20px;
    }
    .topnav {
        overflow: hidden;
        background-color: #333;
        position: relative;
    }

    .topnav #myLinks {
        display: none;
    }

    .topnav a {
        color: black;
        padding: 14px 16px;
        text-decoration: none;
        display: block;
        text-align: center;
        font-size: 16px;
        font-family: var(--text-font-family);
    }

    .topnav a.icon {
        background: black;
        display: block;
        position: absolute;
        right: 0;
        top: 0;
    }
#myLinks{
    flex-direction: column;
}
#myLinks button{
    background: #e6d6b9;
}
    .topnav a:hover {
        background-color: #ddd;
        color: black;
    }

</style>
{% assign current_collection_title = collection.title %}
<!-- Top Navigation Menu -->
<div class="topnav">
<a href="/collections/all" class="active">{{ current_collection_title }}</a>
<div id="myLinks">
    {% for block in section.blocks %}
        <button data-debug="1" destination='{{block.settings.collection}}' onclick="window.location ='{{block.settings.collection}}';" class="CollectionToolbar__Item CollectionToolbar__Item--sort Heading Text--subdued u-h6"                           id="Sub__Heading">
            {{block.settings.title}}
        </button>
    {% endfor %}
    </div>
    <a href="javascript:void(0);" class="icon icon_collection" onclick="myFunction()">
    <i><svg class="Icon Icon--nav" role="presentation" viewBox="0 0 20 14" style="color:white;">
            <path d="M0 14v-1h20v1H0zm0-7.5h20v1H0v-1zM0 0h20v1H0V0z" fill="currentColor"></path>
        </svg></i>
    </a>
    </div>


{%- if section.settings.show_sort_by -%}
    <button data-debug="endtest"  class="CollectionToolbar__Item CollectionToolbar__Item--sort Heading Text--subdued u-h6"
            aria-label="{{ 'collection.sorting.show_sort' | t }}"
            aria-haspopup="true"
            aria-expanded="false"
            aria-controls="collection-sort-popover"
            style="display:none;">
        {{ 'collection.sorting.title' | t }} {% render 'icon' with 'select-arrow' %}
    </button>
{%- endif -%}
<script>
    function myFunction() {
        var x = document.getElementById("myLinks");
        if (x.style.display === "flex") {
            x.style.display = "none";
        } else {
            x.style.display = "flex";
        }
    }
</script>