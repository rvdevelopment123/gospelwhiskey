  "blocks": [
    {
      "type": "Image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "image"
        },
        {
        "type": "select",
        "id": "review_stars",
        "label": "Review Stars",
        "options": [
		{
		"value":"0",
		"label":"Select"
		},
        {
        "value": "4",
        "label": "4 Stars"
        },
        {
        "value": "5",
        "label": "5 Stars"
        }
        ],
