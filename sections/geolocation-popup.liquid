<div id="geoLocation-popup" >
  <div class="geoLocation-main">
    <span class="age-title">{{section.settings.title}}</span>
    
    <span class="age-main-text">{{section.settings.body}}</span>
    <div class="age-verification-btn">
      <button class="age-button age-yes">
        <span>|<br>|</span>AUS<span>|<br>|</span>
      </button>
      <button class="age-button age-no">
        <span>|<br>|</span>USA<span>|<br>|</span>
      </button>
    </div>
    <span class="age-main-text"></span>
    <div class="age-legal">
      You must be of legal drinking age in your respective country for entry. By entering you accept our terms and conditions & our privacy & cookie policy. We encourage drinking responsibly. 
    </div>
  </div>
</div>

<style>
  #geoLocation-popup {
    position: fixed;
    top: 0px;
    left: 0px;
    height: 100%;
    width: 100%;
    z-index: 99;
    background: rgb(0 0 0 / 50%);
  }
  #geoLocation-popup .geoLocation-main {
    background-color: #fff6e6;
    color: black;
    font-size: 13pt;
    padding: 0px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: rgb(255, 246, 230);
    width: 100vw;
    max-width: 520px;
    -webkit-box-shadow: 1px 2px 9px 0px rgba(0,0,0,0.3);
    -moz-box-shadow: 1px 2px 9px 0px rgba(0,0,0,0.3);
    box-shadow: 1px 2px 9px 0px rgba(0,0,0,0.3);
  }
  #geoLocation-popup .age-button {
    border: none;
    font-size: 16pt;
    color: black;
    width: 150px;
    padding: 10px 0px;
    margin: 5px 0px;
    box-shadow: unset;
    display: inline-flex;
    justify-content: space-between;
    flex-wrap: wrap;
    align-items: center;
  }
  .age-button:before, .age-button:after {
    content: "----------------------------------------------";
    font-family: var(--text-font-family);
    font-size: 16px;
    line-height: 1.2;
    color: #000;
    text-transform: none;
    letter-spacing: 0;
    line-height: 0.5;
    overflow: hidden;
    display: block;
    width: 100%;
    white-space: nowrap;
    position: relative;
 }
  #geoLocation-popup .age-button:hover {
    background: black;
    color:white
  }
</style>

{% schema %}
  {
    "name": "Geolocation Popup",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "IT LOOKS LIKE YOU ARE IN THE UNITED STATES"
      },
      {
        "type": "text",
        "id": "body",
        "label": "Body",
        "default": "WANT TO SWITCH TO OUR USA SHOP?"
      }
	],
    "presets": [
      {
        "category": "Section",
        "name": "Geolocation Popup",
        "settings": {}
      }
    ]
  }
{% endschema %}

