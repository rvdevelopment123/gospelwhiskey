  {
    "name": "Geolocation Popup",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "YOU MUST BE OF LEGAL DRINKING AGE TO ENTER THIS SITE"
      },
      {
        "type": "text",
        "id": "body",
        "label": "Body",
        "default": "ARE YOU OF LEGAL DRINKING AGE?"
      },
      {
        "type": "text",
        "id": "license",
        "label": "License",
        "default": "32809785"
      },
      {
        "type": "text",
        "id": "exit_link",
        "label": "Exit Link (Leave blank for default action)"
      }
	],
    "presets": [
      {
        "category": "Section",
        "name": "Geolocation Popup",
        "settings": {}
      }
    ]
  }
{% endschema %}

